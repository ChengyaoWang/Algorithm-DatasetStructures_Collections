{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++2a",
                "-stdlib=libc++",
                "-g",
                "./Trees/main.cpp",
                "-o",
                "./Trees/main",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
    ]
}